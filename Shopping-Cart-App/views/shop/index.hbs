{{# each products}}
<div class="row">
    {{# each this}}
    <div class="col-sm-4 col-md-4">
        <div class="card " style="width: 18rem;">
            <img class="card-img-top img-responsive" src={{this.imagepath}} alt="Card image cap" c>
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div href="#" class="price float-left">${{this.price}}</div>
                <a href="#" class="btn btn-success float-right">Add to Shopping Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{/each}}